<div class="bg-header">
{{#topic}}
	{{#if post}}
        <div class="bg-cover"><img class="lazy" data-original="{{img}}" /></div>
		{{#post}}
        <div class="bg-linear">
            <div class="bg-slogan">
                <a class="topic-wrapper bg-description" href="{{slug}}" target="_blank">
		              {{title}}
		            </a>
            </div>
        </div>
		{{/post}}
	{{else}}
      <a class="topic-wrapper" href="{{siteUrl}}" target="_blank">
          <img class="topic-img lazy" data-original="{{img}}" alt="{{title}}" />
          <span class="topic-title">{{title}}</span>
      </a>
	{{/if}}
{{/topic }}
</div>
