{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}
{{#contentFor "pageStyles"}}
  <link rel="stylesheet" href="{{asset "css/index.css" }}">
  <link rel="stylesheet" href="{{asset "css/navbar.css" }}">
  <link rel="stylesheet" href="{{asset "css/post.css" }}">
{{/contentFor}}


<div class="pv-banner">
    {{#post}}
    {{> "navbar"}}
  <div class="video-bg-img">
    <img class="lazy" data-original="{{image}}"/>
  </div>
  <div class="video">
    <div class="video-info">
      <p class="name">{{title}}</p>
      <span class="author">{{author}} •  <time>{{date published_at timeago="ture"}}</time></span>
    </div>
    <div id="youkuplayer" class="embed-responsive embed-responsive-youku ">
    </div>
    <div class="video-desc">
        {{content}}
    </div>
  </div>
{{/post}}
</div>

<div id="video-container" class="pv-container">
    {{duoshuo_block}}

</div>



{{#contentFor "pageScripts"}}

  <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
