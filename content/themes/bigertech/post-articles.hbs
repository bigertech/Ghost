{{!< default}}

<div id="topScroll">
    {{#post}}
  <div id="post-banner" class="pv-banner">
      {{> "navbar"}}
    <div class="bg-img-small">
      <img class="lazy" data-original="{{image}}"/>
    </div>
    <div class="bg-img">
      <img class="lazy" data-original="{{image}}"/>
    </div>
    <div class="post-info">
      <p class="name">{{title}}</p>
      <span class="author">{{author}} • <time class="post-time">{{date published_at timeago="ture"}}</time></span>
    </div>
  </div>
</div>
<div id="post-main">
  <div id="post-container" class="pv-container">
    <div class="post">
        {{content}}
        <a href="/cwb{{url}}" class="changweibo" >长微博</a>
        {{duoshuo_block}}
    </div>
  </div>
  <div class="readmore center-block">
    <p class="mores">更多阅读</p>
    {{post_relative limit="2"}}
  </div>
{{/post}}
</div>

{{#contentFor "pageScripts"}}

  <!-- 多说公共JS代码 start -->
  <script type="text/javascript">
    var duoshuoQuery = {short_name: "bigertech"};
    (function () {
      var ds = document.createElement('script');
      ds.type = 'text/javascript';
      ds.async = true;
      ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
      ds.charset = 'UTF-8';
      (document.getElementsByTagName('head')[0]
        || document.getElementsByTagName('body')[0]).appendChild(ds);
    })();
  </script>
{{/contentFor}}
